<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.jjdcn.etas.manage.dao.SettingDao">

    <resultMap type="cn.jjdcn.etas.manage.entity.Setting" id="SettingMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="pageSize" column="page_size" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SettingMap">
        select
          id, user_id, page_size
        from etas_manage.setting
        where id = #{id}
    </select>

    <!--查询单个-->
    <select id="queryByUserId" resultMap="SettingMap">
        select
          id, user_id, page_size
        from etas_manage.setting
        where user_id = #{userId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SettingMap">
        select
          id, user_id, page_size
        from etas_manage.setting
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SettingMap">
        select
          id, user_id, page_size
        from etas_manage.setting
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="pageSize != null">
                and page_size = #{pageSize}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into etas_manage.setting(user_id, page_size)
        values (#{userId}, #{pageSize})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update etas_manage.setting
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="pageSize != null">
                page_size = #{pageSize},
            </if>
        </set>
        where id = #{id}
    </update>
    <!--通过主键修改数据-->
    <update id="updateByUserId">
        update etas_manage.setting
        <set>
            <if test="pageSize != null">
                page_size = #{pageSize},
            </if>
        </set>
        where user_id = #{userId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from etas_manage.setting where id = #{id}
    </delete>

</mapper>